{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2020",                   // More modern than ES5
    "module": "commonjs",
    "lib": ["esnext", "dom"],            // Full latest JS + browser support
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,

    /* Module Resolution */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,                // Prevents spammy type errors in node_modules

    /* Optional Good Practices */
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
